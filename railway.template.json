{
  "$schema": "https://railway.app/railway.template.schema.json",
  "name": "XMind MCP Server",
  "description": "AI-powered XMind mind map converter and MCP server",
  "repository": "https://github.com/Master-Frank/XmindMcp",
  "author": "XMind MCP Project",
  "logo": "https://railway.app/placeholder.svg",
  "tags": ["python", "mcp", "xmind", "ai", "converter"],
  "envVars": {
    "PORT": {
      "description": "Server port",
      "default": "8080",
      "required": true
    },
    "ENVIRONMENT": {
      "description": "Environment mode",
      "default": "production",
      "required": true
    },
    "DEBUG": {
      "description": "Debug mode",
      "default": "false",
      "required": false
    }
  },
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "python xmind_mcp_server.py",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}