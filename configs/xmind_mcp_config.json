{
  "server": {
    "name": "XMind AI MCP Server",
    "version": "1.0.0",
    "description": "AI驱动的XMind思维导图操作服务器",
    "port": 8080,
    "host": "localhost",
    "debug": false
  },
  "xmind": {
    "default_format": "xmind",
    "supported_formats": ["xmind", "md", "txt", "html", "docx", "xlsx"],
    "max_file_size": 10485760,
    "backup_enabled": true,
    "backup_directory": "./backups"
  },
  "ai": {
    "enabled": true,
    "provider": "openai",
    "model": "gpt-4",
    "max_tokens": 2000,
    "temperature": 0.7,
    "api_key": "your_api_key_here",
    "auto_suggestions": true,
    "smart_categorization": true
  },
  "tools": {
    "read_xmind": {
      "enabled": true,
      "max_nodes": 1000,
      "include_statistics": true
    },
    "create_mind_map": {
      "enabled": true,
      "max_topics": 100,
      "auto_layout": true
    },
    "analyze_mind_map": {
      "enabled": true,
      "complexity_analysis": true,
      "suggestion_generation": true
    },
    "convert_to_xmind": {
      "enabled": true,
      "preserve_formatting": true,
      "auto_format_detection": true
    },
    "list_xmind_files": {
      "enabled": true,
      "recursive": true,
      "include_metadata": true
    },
    "ai_generate_topics": {
      "enabled": true,
      "max_suggestions": 10,
      "context_aware": true
    },
    "ai_optimize_structure": {
      "enabled": true,
      "preserve_user_content": true,
      "smart_reorganization": true
    }
  },
  "security": {
    "allowed_file_extensions": [".xmind", ".md", ".txt", ".html", ".docx", ".xlsx"],
    "blocked_directories": ["/etc", "/usr", "/bin", "/sbin"],
    "max_concurrent_requests": 10,
    "rate_limit": {
      "requests_per_minute": 60,
      "burst_size": 10
    }
  },
  "logging": {
    "level": "INFO",
    "file": "./logs/xmind_mcp_server.log",
    "max_size": 10485760,
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "performance": {
    "cache_enabled": true,
    "cache_size": 100,
    "cache_ttl": 3600,
    "thread_pool_size": 4,
    "request_timeout": 30
  }
}